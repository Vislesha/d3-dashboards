{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Data Service API Contract",
  "description": "TypeScript service interface contract for DataService",
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DataService class interface",
      "properties": {
        "name": {
          "type": "string",
          "const": "DataService"
        },
        "methods": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "enum": [
                  "fetchData",
                  "validateDataSource",
                  "clearCache",
                  "getCacheSize",
                  "getLoadingState"
                ]
              },
              "description": {
                "type": "string"
              },
              "parameters": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              },
              "returnType": {
                "type": "string"
              }
            },
            "required": ["name", "returnType"]
          }
        }
      },
      "required": ["name", "methods"]
    }
  },
  "required": ["service"]
}

